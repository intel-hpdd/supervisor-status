{
  "plugins": [
    "prettier"
  ],
  "rules": {
    "no-var": 2,
    "no-console": "off",
    "linebreak-style": [
      2,
      "unix"
    ],
    "curly": [
      2,
      "multi",
      "consistent"
    ],
    "prefer-const": [
      "error",
      {
        "destructuring": "all",
        "ignoreReadBeforeAssign": false
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "singleQuote": true
      }
    ]
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "experimentalObjectRestSpread": true
  },
  "extends": [
    "eslint:recommended",
    "prettier"
  ]
}
